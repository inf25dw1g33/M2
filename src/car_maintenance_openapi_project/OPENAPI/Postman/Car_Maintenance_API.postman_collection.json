        {
          "name": "Lista todos os proprietários",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/owners"
          }
        },
        {
          "name": "Filtrar proprietários por nome",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/owners?name=Maria",
              "host": ["{{baseUrl}}"],
              "path": ["api", "owners"],
              "query": [
                {
                  "key": "name",
                  "value": "Maria"
                }
              ]
            }
          }
        },
        {
          "name": "Obtém proprietário por ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/owners/1"
          }
        },
        {
          "name": "Cria novo proprietário",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/owners",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Novo Proprietário\",\n  \"email\": \"novo@example.com\",\n  \"phone\": \"+351911111111\"\n}"
